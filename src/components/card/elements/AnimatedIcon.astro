<style>
  svg {
  transition: all 1s ease;
}
  #triangles {
  transform: translateX(10%);
}
#dark-g {
  fill: rgba(0,100,255,0.5);
}
#dark-1 {
  animation: darkone 10s ease infinite;
}
#dark-2 {
  animation: darktwo 10s ease infinite;
}
#light {
  fill: rgba(100,100,255,0.5);
  opacity: 1;
  animation: light 10s ease infinite;
}
@keyframes darktwo{
   0% {
    transform: translateX(-100%);
   }
   8% {
    transform: translateX(0%);
   }
   16% {
    transform: translateX(-100%);
   }
   100%{
    transform: translateX(-100%);
   }
  }
@keyframes darkone{
   0% {
    transform: translateX(0%);
    opacity: 1;
   }
   8% {
    transform: translateX(+20%);
    opacity: 0;
   }
   16% {
    transform: translateX(0%);
    opacity: 1;
   }
   100%{
    transform: translateX(0%);
    opacity: 1;
   }
  }
@keyframes light{
   0% {
    transform: translateX(0%);
   }
   8% {
    transform: translateX(20%);
   }
   16% {
    transform: translateX(0%);
   }
   100%{
   }
  }

  vg:hover #dark-2 {
  transition: all 1s ease;
  transform: translateX(0%);
}
vg:hover #dark-1 {
  transition: all 1s ease;
  transform: translateX(+20%);
  opacity: 0;
}
vg:hover #light {
  transition: all 1s ease;
  transform: translateX(20%);
}


