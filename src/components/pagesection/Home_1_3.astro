---
import Layout from "~/layouts/BaseLayout.astro";
import Page from "~/layouts/PageLayout.astro";
import Footer from "~/components/footer/Footer.astro";
import Bubble from "~/components/sidebar/CollapsibleSidebar.astro";
import Alignment from "~/components/alignment/Alignment.astro";
import LogoCard from "~/components/card/LogoCard.astro";
import FiveCard from "~/components/gridsection/FiveCard.astro";
import FourCard from "~/components/gridsection/FourCard.astro";
import ThreeCard from "~/components/gridsection/ThreeCard.astro";
import TwoCard from "~/components/gridsection/TwoCard.astro";
import OneCard from "~/components/gridsection/OneCard.astro";
import ImageCard from "~/components/card/ImageCard.astro";
import Paragraph from "~/components/card/ParagraphCard.astro";
import TwoColumns from "~/components/flexsection/TwoColumns.astro";
import ThreeColumns from "~/components/flexsection/ThreeColumns.astro";
import OneColumn from "~/components/flexsection/OneColumn.astro";
import TitleSuperscript from "~/components/sectiontitle/TitleSuperscript.astro";
import TitleSubscript from "~/components/sectiontitle/TitleSubscript.astro";
import Title from "~/components/sectiontitle/Title.astro";
import SmallHeading from "~/components/card/elements/SmallHeading.astro";
import BasicText from "~/components/card/elements/BasicText.astro";
import SmallLink from "~/components/card/elements/SmallLink.astro";
import AnimatedIcon from "~/components/card/elements/AnimatedIcon.astro";
import BreakRightOverlay from "~/components/sectionbreak/BreakRightOverlay.astro";
import ButtonCard from "~/components/card/ButtonCard.astro";
import LargeText from "~/components/card/elements/LargeText.astro";
import CardButton from "~/components/card/elements/CardButton.astro";
import LargeHeading from "~/components/card/elements/LargeHeading.astro";
import BreakDiagonal from "~/components/sectionbreak/BreakDiagonal.astro";


import {Image} from "@astrojs/image/components";
---


<Page leftcolor="white" rightcolor="white" maincolor="white">
  <TwoColumns>
  <OneCard slot="left">
    <TitleSubscript title="Search Engine Optimisation is an easy win for your growing company" subscript="Experience zero lag" slot="one"/>
    <Paragraph slot="two">
      <SmallHeading setclass="text-indigo-500" heading="Custom written websites" slot="heading"/>
      <BasicText paragraph="Don't pay someone else to use a bloated site builder like Wix, SquareSpace, or WordPress. These platforms are designed for Ecommerce sites and will never match the speed of a custom built static site hosted on a CDN with pre-cached assets and optimised images (we use .webp instead of .jpg or .png)" slot="paragraph"/>
      <SmallLink href="/about/" text="Read more >" slot="link"/>
    </Paragraph>
  </OneCard>
  <Image slot="right" alt="" src={import('~/assets/images/magnifying_clear_purple.webp')} width=400 aspectRatio="55:44"/>
  </TwoColumns>
  <BreakDiagonal top="white" bottom="rgba(170, 39, 245, 0.1)"/>
</Page>

