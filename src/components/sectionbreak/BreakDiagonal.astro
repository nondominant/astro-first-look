---
const { top, bottom } = Astro.props;
---
<style>
  .container{
    position: relative;
    width: 100%;
    height: 20vh;
  }
  .top {
    position: absolute;
    top: 0;
    left: -50vw;
    width: 300vw;
    height: 20vh;
    overflow: hidden;
    z-index: 1;
  }
  .bottom {
    position: absolute;
    top: 0;
    left: -50vw;
    width: 300vw;
    height: 50vh;
    z-index: 2;
    transform: translate(0, 4rem) rotate(-5deg);
  }
</style>

  <div class="container">
    <div style=`background: ${top};` class="top">
    <div style=`background: ${bottom};` class="bottom"></div>
    </div>
  </div>
