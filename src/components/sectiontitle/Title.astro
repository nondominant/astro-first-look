const {setclass, title, color} = Astro.props;
---

<style>
  .container {
    display: flex;
    flex-direction: column;
    height: 100%;
    padding: 1rem;
    justify-content: center;
  }
  h1 {
    font-family: "sohne-var","Helvetica Neue","Arial",sans-serif;
