---
const {title, superscript, primary, secondary} = Astro.props;
---

<style>
  .container {
    display: flex;
    flex-direction: column;
    height: 100%;
    padding: 1rem;
    justify-content: center;
  }
  h1 {
    font-family: "sohne-var","Helvetica Neue","Arial",sans-serif;
    font-weight: 800;
    font-size: 2.5rem;
  }
  h3 {
    font-family: "sohne-var","Helvetica Neue","Arial",sans-serif;
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 2rem;
  }
</style>

  <div class="container">
    <h3 style=`color: ${secondary};`>{superscript}</h3>
    <h1 style=`color: ${primary};`>{title}</h1>
  </div>
