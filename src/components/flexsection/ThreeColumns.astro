---
const { background="transparent" } = Astro.props;
---
<style>
  .section {
    display: flex;
    flex-direction: row;
    width: 100%;
    min-height: 70vh;
  }
  .left {
    display: flex;
    flex-direction: column;
    width: 33%;
    min-height: 100%;
    justify-content: center;
    align-items: center;
  }
  .right {
    display: flex;
    flex-direction: column;
    width: 33%;
    min-height: 100%;
    justify-content: center;
    align-items: center;
  }
  .middle {
    display: flex;
    flex-direction: column;
    width: 33%;
    min-height: 100%;
    justify-content: center;
    align-items: center;
  }
  @media (max-width: 860px){
    .section {
      flex-direction: column;
    }
    .left, .right, .middle {
      width: 100%;
    }
  }
</style>

<div style=`background: ${background};` class="section">
  <div style=`background: ${background};` class="left"><slot name="left"/></div>
  <div style=`background: ${background};` class="middle"><slot name="middle"/></div>
  <div style=`background: ${background};` class="right"><slot name="right"/></div>
</div>
