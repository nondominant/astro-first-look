---
const { background="white", height="70vh" } = Astro.props;
---

<style>
  .section {
    display: flex;
    flex-direction: row;
    width: 100%;
  }
  .left {
    display: flex;
    flex-direction: column;
    width: 50%;
    min-height: 100%;
    justify-content: center;
    align-items: center;
  }
  .right {
    display: flex;
    flex-direction: column;
    width: 50%;
    min-height: 100%;
    justify-content: center;
    align-items: center;
  }
  @media (max-width: 860px){
    .section {
      flex-direction: column;
    }
    .left, .right {
      width: 100%;
    }
  }
</style>

  <div style=`background: ${background}; min-height: ${height};` class="section">
  <div style=`background: ${background};` class="left"><slot name="left"/></div>
  <div style=`background: ${background};` class="right"><slot name="right"/></div>
</div>
