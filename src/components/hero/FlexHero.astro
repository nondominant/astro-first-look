---
import './flexhero.css';
---

<!-- the background image is applied to the .hero class using
  css -->
<style>
  h2 {
    font-family: var(--font-main);
    font-weight: 900;
    text-decoration: none;
    color: white;
  }
  h1 {
    font-family: var(--brand);
    font-weight: 900;
    text-decoration: none;
    color: white;
  }
  [data-is-top="true"] .hero-inner h1{
    opacity: 1;
    transition: all 1s ease;
  }
  [data-is-top="false"] .hero-inner h1{
    opacity: 0;
    transition: all 1s ease;
  }
  [data-is-top="true"] .hero-inner h2{ opacity: 1;transition: all 1s ease; }
  [data-is-top="false"] .hero-inner h2{ opacity: 0;transition: all 1s ease; }
  [data-is-top="true"] .hero-inner a{ opacity: 1;transition: opacity 1s ease; }
  [data-is-top="false"] .hero-inner a{ opacity: 0;transition: opacity 1s ease; }
  a{
    font-weight: 900;
    text-decoration: none;
    background: transparent;
    padding: 3px 6px;
    border-radius: 6px;
    border: solid 2px transparent; 
  }
  a:hover {
    display: block;
    color: white;
    border: solid 2px white;
  }
  .btn {
    color: white;
  }
</style>

<section class="hero scrollobserver">
  <div class="flex flex-col h-auto w-screen border-8 ">
    <h1 style="font-family: var(--brand); font-size: 6rem;">GluCode Studio</h1>
  <h2 class="text-indigo-50 md:text-lg sm:text-sm">Hand crafted websites for lightning fast load times</h2>
  <!--  <a href="https://example.com/" class="btn">See How</a> -->
  </div>
</section>

