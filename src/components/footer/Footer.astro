---
const { background } = Astro.props;

---
<style>
video {
  object-fit: cover;
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}
.footer{
  position: relative;
  width: 100%;
  min-height: 100vh;
}
.content {
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  height: 100%;
  width: 100%;
  padding-top: 10rem;
}

.footer:after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(5,0,10,1);
  opacity: 0.9;
}

@keyframes pulse {
  from {
    opacity: 0.7;
  }
  to {
    opacity: 1;
  }
}
</style>

<div class="footer"> 
  <video playsinline autoplay muted loop id="bgvid">
    <source src="https://thumbs.gfycat.com/ThoughtfulPeacefulJellyfish-mobile.mp4" type="video/mp4">
    
  </video>
  <div class="content">
    <slot/>
  </div>
</div>



